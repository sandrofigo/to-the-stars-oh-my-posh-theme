{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#ffffff",
    "star_red": "#c02739",
    "star_orange": "#e26537",
    "star_gold": "#e0ab4f",
    "star_blue": "#315283",
    "star_white": "#f7f7f7"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "p:white",
          "background": "p:star_red",
          "leading_diamond": "\ue0b6",
          "template": "\uf427 {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_orange",
          "template": " {{ .Path }} ",
          "options": {
            "style": "folder",
            "max_depth": 2,
            "hide_root_location": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_gold",
          "template": " {{ .UpstreamIcon }} {{ .HEAD }} ",
          "options": {
            "branch_icon": "",
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_blue",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "unity",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "p:white",
          "background": "p:star_blue",
          "template": " \ue721 {{ .UnityVersion }} ",
          "options": {
            "http_timeout": 2000
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#111111",
          "background": "p:star_white",
          "template": " \uf0e7 "
        }
      ]
    }
  ],
  "final_space": true,
  "version": 4
}