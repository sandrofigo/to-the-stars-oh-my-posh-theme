{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "p:white",
          "background": "p:star_red",
          "leading_diamond": "\ue0b6",
          "template": "\uf427 {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_orange",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "folder",
            "max_depth": 5
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_gold",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }} ",
          "properties": {
            "branch_icon": "",
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:white",
          "background": "p:star_blue",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "unity",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "p:white",
          "background": "p:star_blue",
          "template": " \ue721 {{ .UnityVersion }} ",
          "properties": {
            "http_timeout": 2000
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#111111",
          "background": "p:star_white",
          "template": " \uf0e7 "
        }
      ]
    }
  ],
  "palette": {
    "white": "#FFFFFF",
    "star_red": "#ba2536",
    "star_orange": "#db6236",
    "star_gold": "#dfae59",
    "star_blue": "#2f4f80",
    "star_white": "#F7F7F7"
  }
}
